<h1>Login and registeration form</h1>

<% if flash[:error] %>
    <p><%= flash[:error] %></p>
<% end %>

<%= form_tag session_index_path do %>
  <p>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag  'Sign in'%></p>
<% end %>
